{
  "shell": true,
  "cmd": "g++ -std=c++17 \"${file}\" -o \"${file_path}/${file_base_name}.exe\" && powershell -Command \"$t = Measure-Command { cmd /c '${file_base_name}.exe < input.txt > output.txt' }; 'time taken: ' + $t.TotalSeconds + 's' > info.txt\"",
  "working_dir": "${file_path}",
  "selector": "source.cpp"
}
