.stack 100h
.model small

.data
    msg1 db "Enter you character: $"
    msg2 db "Here is your character: $"
        
.code
    main proc
    mov ax, @data
    mov ds, ax
    
    lea dx, msg1
    mov ah, 09h
    int 21h
    
    mov ah, 01h
    int 21h
    
    mov bl, al
    
    mov dl, 10
    mov ah, 02h
    int 21h
    
    mov dl, 13
    mov ah, 02h
    int 21h   
    
    lea dx, msg2
    mov ah, 09h
    int 21h
    
    mov dl, bl
    mov ah, 02h
    int 21h
    
    main endp
end main
