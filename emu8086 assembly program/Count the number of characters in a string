.stack 100h
.model small

.data
    msg1 db "Hello!$"
    msg2 db "Number of characters: $"
.code
    main proc
        mov ax, @data
        mov ds, ax
        
        lea si, msg1
        xor cx, cx
        
        go:
            mov al, [si]
            cmp al, '$'
            je done
            inc cx
            inc si
            jmp go
        done:
            lea dx, msg2
            mov ah, 9h
            int 21h
            
            mov al, cl
            add al, '0'
            mov dl, al
            mov ah, 2h
            int 21h
        
        mov ah, 4ch
        int 21h
        
    endp main
end main
