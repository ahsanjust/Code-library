.stack 100h
.model small

.data
    msg1 db "The digit is even.$"
    msg2 db "The digit is odd.$" 
.code
    main proc
        mov ax, @data
        mov ds, ax
        
        mov ah, 1h
        int 21h
        sub al, '0'       
        and al, 1
        cmp al, 0
        je even
        lea dx, msg2
        mov ah, 9h
        int 21h
        jmp exit
        
        even:
        lea dx, msg1
        mov ah, 9h
        int 21h
                
        exit:
        mov ah, 4ch
        int 21h
        
    endp main
end main
